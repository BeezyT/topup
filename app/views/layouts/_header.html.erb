<div id="page_header" onclick="document.location.href = '/'">
  <h2>TopUp</h2>
  <h1>The #1 Javascript Pop Up / Lightbox made by Paul Engel</h1>
</div>
<% form_tag request.path, :method => "post", :id => "library_picker" do %>
  <%= select_tag "library", 
                 options_for_select(%w(jQuery Prototype).collect{|x| [x, x.downcase]}, session[:library]), 
                 :onchange => "$(this).up('form').submit()", 
                 :style => ("display: inline" if session[:library]) %>
<% end %>